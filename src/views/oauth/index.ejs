<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= title %></title>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>
    <body class="bg-gray-100 h-screen flex items-center justify-center">
        <div class="bg-white p-6 rounded-lg shadow-lg max-w-md w-full">
            <h1 class="text-3xl font-bold mb-4 text-center"><%= title %></h1>
            <p class="text-lg text-gray-600 mb-6 text-center">
                <%= subtitle %>
            </p>

            <!-- OAuth 登入表單 -->
            <form action="<%= redirectUri %>" method="POST" class="space-y-4">
                <input type="hidden" name="client_id" value="YOUR_CLIENT_ID" />

                <!-- 帳號輸入框 -->
                <div>
                    <label
                        for="username"
                        class="block text-sm font-medium text-gray-700"
                        >Username</label
                    >
                    <input
                        type="text"
                        id="username"
                        name="username"
                        required
                        class="mt-1 p-2 w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                    />
                </div>

                <!-- 密碼輸入框 -->
                <div>
                    <label
                        for="password"
                        class="block text-sm font-medium text-gray-700"
                        >Password</label
                    >
                    <input
                        type="password"
                        id="password"
                        name="password"
                        required
                        class="mt-1 p-2 w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                    />
                </div>

                <!-- 登入按鈕 -->
                <button
                    type="submit"
                    class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600 transition-colors"
                >
                    Login with OAuth
                </button>
            </form>

            <!-- 額外選項 -->
            <p class="text-center text-gray-500 mt-4">or</p>
            <a
                href="/signup"
                class="block text-center text-blue-500 hover:underline"
            >
                Create an account
            </a>
        </div>
    </body>
</html>
